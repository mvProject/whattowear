<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.MainFragment">

    <EditText
        android:id="@+id/edt_selected_place"
        style="@style/Widget.MaterialComponents.AutoCompleteTextView.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/ic_search"
        android:hint="@string/edt_where_to_go_hint"
        android:importantForAutofill="no"
        android:inputType="text"
        android:padding="@dimen/small_padding_8dp"
        android:textSize="@dimen/small_text_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_reset_user_selection"
        style="@style/ButtonStyle"
        android:text="@string/btn_reset_name"
        app:layout_constraintEnd_toStartOf="@id/btn_trip_start_date_select"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edt_selected_place" />

    <Button
        android:id="@+id/btn_trip_start_date_select"
        style="@style/ButtonIconStyle"
        android:text="@string/btn_start_date_name"
        app:icon="@drawable/ic_date_range"
        app:layout_constraintEnd_toStartOf="@id/btn_trip_end_date_select"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toEndOf="@id/btn_reset_user_selection"
        app:layout_constraintTop_toBottomOf="@id/edt_selected_place" />

    <Button
        android:id="@+id/btn_trip_end_date_select"
        style="@style/ButtonIconStyle"
        android:text="@string/btn_end_date_name"
        app:icon="@drawable/ic_date_range"
        app:layout_constraintEnd_toStartOf="@id/btn_search_wear"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toEndOf="@id/btn_trip_start_date_select"
        app:layout_constraintTop_toBottomOf="@id/edt_selected_place" />

    <Button
        android:id="@+id/btn_search_wear"
        style="@style/ButtonStyle"
        android:text="@string/btn_select_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toEndOf="@id/btn_trip_end_date_select"
        app:layout_constraintTop_toBottomOf="@id/edt_selected_place" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/wearList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/list_margin_top"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_reset_user_selection"/>
</androidx.constraintlayout.widget.ConstraintLayout>
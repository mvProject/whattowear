<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_12sp</item>
    </style>

    <style name="DateSelectViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_data_select_buttons</item>
        <item name="android:clickable">true</item>
        <item name="android:drawableStart">@drawable/ic_date_range</item>
        <item name="android:focusable">true</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:paddingEnd">@dimen/padding_4dp</item>
        <item name="android:paddingStart">@dimen/padding_4dp</item>
        <item name="android:paddingTop">@dimen/padding_12dp</item>
        <item name="android:paddingBottom">@dimen/padding_12dp</item>
    </style>

    <style name="WeatherSummaryViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_data_select_buttons</item>
        <item name="android:drawablePadding">@dimen/padding_16dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:padding">@dimen/padding_4dp</item>
    </style>


    <style name="ThemeOverlay.App.MaterialAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="alertDialogStyle">@style/MaterialAlertDialog.App</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.App.Button</item>
        <item name="buttonBarNeutralButtonStyle">@style/Widget.App.Button</item>
    </style>

    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Button</item>
    </style>

    <style name="ThemeOverlay.App.Button" parent="">
        <item name="colorOnPrimary">@color/colorAccent</item>
        <item name="colorOnSurface">@color/colorPrimary</item>
    </style>

    <style name="MaterialAlertDialog.App" parent="MaterialAlertDialog.MaterialComponents">
        <item name="shapeAppearance">@style/ShapeAppearance.App.MediumComponent</item>
    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>
</resources>
